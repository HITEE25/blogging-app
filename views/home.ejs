<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
        <title>home page</title>
        <style>
        .blog-cover {
            width: 100%;        /* fill the card width */
            height: 300px;      /* or any fixed height you like */
            object-fit: cover;  /* crop to fill box, keep aspect ratio */
            object-position: center;
        }
        </style>
</head>

<body>
    <%- include("./partials/navbar") %>
      <div class="container mt-4">
        <div class="row row-cols-4">
           <% blogs.forEach(blog => { %>
            <div class="col">
              <div class="card" style="width: 18rem;">
                <img src="<%= blog.coverImageUrl %> " class="card-img-top blog-cover" alt="..." width="500px" height="500px">
                  <div class="card-body">
                    <h5 class="card-title"><%= blog.title %></h5>
                      <a href="/blog/<%= blog._id %>" class="btn btn-primary">view</a>
                   </div>
               </div>
            </div>
          <% }) %>
        </div>
      </div>
    <%- include("./partials/script") %>
</body>

</html>