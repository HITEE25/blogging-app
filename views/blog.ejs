<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title><%= blog.title %></title>

    <style>
        .blog-cover {
            width: 100%;
            max-height: 500px;
            object-fit: cover;
            object-position: center;
        }

        .blog-pre {
            white-space: pre-wrap;
            word-wrap: break-word;
            font-family: inherit;
            padding: 0.5rem 0.75rem;
            font-size: 1.1rem;
        }

        .profile-img {
            width: 50px;
            height: 50px;
            object-fit: cover;
        }
    </style>
</head>

<body>
    <%- include("./partials/navbar") %>

    <div class="container mt-4">
        <h1 class="mb-3"><%= blog.title %></h1>

        <div class="text-center mb-4">
            <img 
                src="<%= blog.coverImageUrl %>" 
                class="img-fluid rounded blog-cover"
                alt="Blog cover">
        </div>

        <pre class="blog-pre"><%= blog.content %></pre>
    </div>

    <!-- Author -->
    <div class="container mt-4 d-flex align-items-center">
        <img 
            src="<%= blog.createdBy.profileImgUrl %>" 
            class="rounded-circle profile-img"
            alt="Author">
        <p class="ms-2 mb-0"><%= blog.createdBy.fullName %></p>
    </div>

    <!-- Comments -->
    <form action="/blog/comment/<%= blog._id %>" method="post">
        <div class="container mt-4">
            <h4>Comments (<%= comments.length %>)</h4>

            <% if (locals.user) { %>
                <div class="mb-3">
                    <input 
                        type="text" 
                        class="form-control"
                        name="content"
                        placeholder="Enter your comment">
                </div>
                <button type="submit" class="btn btn-primary mb-4">
                    Submit
                </button>
            <% } %>

            <% comments.forEach(comment => { %>
                <div class="d-flex align-items-center mb-2">
                    <img 
                        src="<%= comment.createdBy.profileImgUrl %>" 
                        class="rounded-circle profile-img"
                        alt="User">
                    <p class="ms-2 mb-0 fw-semibold">
                        <%= comment.createdBy.fullName %>
                    </p>
                </div>

                <pre class="blog-pre mb-4"><%= comment.comment %></pre>
            <% }) %>
        </div>
    </form>
    <%- include("./partials/footer.ejs") %>
    <%- include("./partials/script") %>
</body>
</html>
